<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE rdf:RDF [
    <!ENTITY % brandDTD SYSTEM "chrome://global/locale/brand.dtd">
    %brandDTD;
]>

<rdf:RDF xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
        xmlns:nc="http://home.netscape.com/NC-rdf#">

# MOZILLA NVU CONTENT PACK
    <rdf:Description about="urn:root"
            nc:title="&brandShortName; Help"
            nc:defaulttopic="comp-doc"
            nc:base="chrome://help/locale/">
        <nc:panellist>
            <rdf:Seq>
                <rdf:li>
# We should import the firefox glossary into nvu help.
                    <rdf:Description nc:panelid="glossary"
                        nc:datasources="firebird-glossary.rdf"/>
                </rdf:li>
                <rdf:li>
                    <rdf:Description nc:panelid="index"
                        nc:datasources="nvu-index.rdf"/>
                </rdf:li>
                <rdf:li>
                    <rdf:Description nc:panelid="search"
                        nc:datasources=""
                        nc:emptysearchtext="[No matching items found.]"
                        nc:emptysearchlink="chrome://help/locale/welcome.xhtml#search_tips"/>
                </rdf:li>
                <rdf:li>
# import help-on-help TOC along with the nvu one.
                    <rdf:Description nc:panelid="toc"
                        nc:datasources="help-toc.rdf nvu-toc.rdf"/>
                </rdf:li>
            </rdf:Seq>
        </nc:panellist>
    </rdf:Description>
</rdf:RDF>
